<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/item_coffee_iv_product"
            android:layout_width="@dimen/_85sdp"
            android:scaleType="fitXY"
            android:layout_height="@dimen/_75sdp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_coffee_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coffee name"
                android:textColor="@color/design_default_color_primary"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/item_coffee_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 EGP"
                android:textSize="@dimen/_16ssp"
                android:textStyle="normal" />

        </LinearLayout>

        <ImageView
            android:id="@+id/item_coffee_iv_minus"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_baseline_remove_24" />

        <TextView
            android:id="@+id/item_coffee_tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:text="0"
            android:gravity="center"
            android:textSize="@dimen/_16ssp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/item_coffee_iv_plus"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_baseline_add_24" />


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>